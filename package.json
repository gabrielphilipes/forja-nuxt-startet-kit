{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "bun run services:up && bun run services:wait-database && bun run nuxt dev",
    "postdev": "bun run services:down",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "commit": "cz",
    "lint:prettier": "prettier --check \"**/*.{js,jsx,ts,js,tsx,vue,css,scss,json,md}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{js,jsx,ts,js,tsx,vue,css,scss,json,md}\"",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint --fix .",
    "services:up": "docker compose -f infra/docker-compose.yml up -d",
    "services:down": "docker compose -f infra/docker-compose.yml down",
    "services:wait-database": "bun run infra/wait-database.js",
    "check-updates": "bunx npm-check-updates -i --format group"
  },
  "dependencies": {
    "dotenv": "^16.6.0",
    "drizzle-orm": "^0.44.2",
    "nuxt": "^3.17.5",
    "pg": "^8.16.2",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nuxt/eslint": "1.4.1",
    "@secretlint/secretlint-rule-preset-recommend": "10.1.1",
    "@types/pg": "^8.15.4",
    "cz-conventional-changelog": "3.3.0",
    "drizzle-kit": "^0.31.3",
    "eslint": "9.29.0",
    "husky": "9.1.7",
    "prettier": "3.6.1",
    "secretlint": "10.1.1",
    "tsx": "^4.20.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
